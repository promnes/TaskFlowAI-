# .env.example - Environment variables template
# ✅ SECURITY: Copy this to .env and update all values before running!

# ==================== BOT CONFIGURATION ====================
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_USER_IDS=123456789,987654321

# ==================== DATABASE ====================
# Development: SQLite
DATABASE_URL=sqlite+aiosqlite:///./langsense.db

# Production: PostgreSQL with SSL
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/langsense?ssl=require
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# ==================== SECURITY ⚠️ CRITICAL ====================
# Generate encryption key: python -c "import os; print(os.urandom(32).hex())"
ENCRYPTION_KEY=your_encryption_key_hex_32_bytes

# Generate JWT secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_EXPIRATION_HOURS=24

# ==================== CORS - API ORIGINS ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1
# Production: CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ==================== HTTPS ====================
FORCE_HTTPS=false
ALLOWED_HOSTS=localhost,127.0.0.1

# ==================== BROADCAST ====================
BROADCAST_RATE_LIMIT=30
BROADCAST_CHUNK_SIZE=100
BROADCAST_RETRY_ATTEMPTS=3
BROADCAST_RETRY_DELAY=5

# ==================== LOCALIZATION ====================
DEFAULT_LANGUAGE=ar
DEFAULT_COUNTRY=SA

# ==================== CUSTOMER ID ====================
CUSTOMER_ID_PREFIX=C
CUSTOMER_ID_YEAR_FORMAT=2025

# ==================== FILE UPLOAD ====================
MAX_FILE_SIZE=20

# ==================== PAGINATION ====================
USERS_PER_PAGE=10
ANNOUNCEMENTS_PER_PAGE=5
TRANSACTIONS_PER_PAGE=20

# ==================== LOGGING ====================
LOG_LEVEL=INFO
LOG_FILE=bot.log

# ==================== RATE LIMITING ====================
USER_RATE_LIMIT=5
ADMIN_RATE_LIMIT=30
API_RATE_LIMIT=100
DEPOSIT_RATE_LIMIT=10
WITHDRAWAL_RATE_LIMIT=10

# ==================== FINANCIAL LIMITS ====================
MIN_DEPOSIT=50
MAX_DEPOSIT=100000
MIN_WITHDRAWAL=100
MAX_DAILY_WITHDRAWAL=10000

# ==================== REDIS ====================
REDIS_URL=redis://localhost:6379/0

# ==================== RABBITMQ ====================
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# ==================== ENVIRONMENT ====================
ENVIRONMENT=development
