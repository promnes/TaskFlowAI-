# .env.example - Environment variables template

# Telegram Bot Token (required for bot, use dummy value for API-only mode)
BOT_TOKEN=your-telegram-bot-token-here
# Or for API-only mode:
# BOT_TOKEN=dummy-token-for-api-mode

# Admin User IDs (comma-separated)
ADMIN_USER_IDS=123456789,987654321

# Database Configuration
# SQLite (development):
DATABASE_URL=sqlite+aiosqlite:///./langsense.db
# PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/langsense

# JWT Configuration (for mobile API)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# App Configuration
DEFAULT_LANGUAGE=ar
DEFAULT_COUNTRY=SA

# Customer ID Configuration
CUSTOMER_ID_PREFIX=C
CUSTOMER_ID_YEAR_FORMAT=2025

# Broadcast Configuration
BROADCAST_RATE_LIMIT=30
BROADCAST_CHUNK_SIZE=100
BROADCAST_RETRY_ATTEMPTS=3
BROADCAST_RETRY_DELAY=5

# File Upload Configuration
MAX_FILE_SIZE=20
